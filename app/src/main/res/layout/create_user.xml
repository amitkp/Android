<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_counterprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Create User"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/big_textSize"></TextView>

    <ScrollView
        android:id="@+id/counterprofile_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lnr_counterprofile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="#ffffff"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rltv_devider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorPrimary"></RelativeLayout>

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:hint="User Name*"
                android:imeOptions="actionNext"></EditText>

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:hint="Password*"
                android:imeOptions="actionNext"></EditText>


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:hint="Name*"
                android:imeOptions="actionNext"></EditText>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:hint="Mobile*"
                android:imeOptions="actionNext"
                android:inputType="number"></EditText>

            <AutoCompleteTextView
                android:id="@+id/auto_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:hint="Type to select State*"></AutoCompleteTextView>

            <AutoCompleteTextView
                android:id="@+id/auto_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:hint="Type to select Manager*"></AutoCompleteTextView>


            <Button
                android:id="@+id/counterprofile_btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/colorPrimary"
                android:text="SUBMIT"
                android:textColor="@color/colorWhite"></Button>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
