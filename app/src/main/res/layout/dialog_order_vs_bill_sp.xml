<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <AutoCompleteTextView
        android:id="@+id/login_edtxt_emailmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:hint="Type to select Sales Person"
        android:imeOptions="actionNext"
        android:inputType="text"></AutoCompleteTextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:id="@+id/radio_group">
        <RadioButton
            android:text="Counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_counter" />
        <RadioButton
            android:text="Distributor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_distributor" />
        <RadioButton
            android:text="Prime Partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_prime_partner" />
    </RadioGroup>
    <Button
        android:id="@+id/create_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@color/colorPrimary"
        android:text="Create Bill"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"></Button>

</LinearLayout>
