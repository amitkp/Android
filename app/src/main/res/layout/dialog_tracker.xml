<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:intellogreen="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/p_large">

    <EditText
        android:id="@+id/et_tracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m_normal"
        android:layout_marginRight="@dimen/m_normal"
        android:textColor="@android:color/darker_gray"
        android:hint="Location"
        android:textSize="@dimen/sp_xnormal"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/m_normal"
        android:layout_marginTop="@dimen/m_normal"
        android:gravity="center"
        android:text="Add Teritorry"/>
</LinearLayout>